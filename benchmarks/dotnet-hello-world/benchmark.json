{
  "name": ".NET Hello World",
  "description": "Build a minimal .NET console application",
  "type": "in-repo",
  "tags": ["dotnet", "console", "minimal"],
  "toolchains": [
    { "stack": "dotnet" }
  ],
  "prerequisites": [
    { "command": "dotnet --version", "minVersion": "8.0" }
  ],
  "restore": {
    "command": "dotnet restore src",
    "timeout": 120
  },
  "clearCache": {
    "command": "dotnet clean src",
    "additionalPaths": ["src/bin", "src/obj"]
  },
  "preBuild": [
    "dotnet build-server shutdown"
  ],
  "build": {
    "full": {
      "command": "dotnet build src -c Release --no-restore",
      "timeout": 60
    },
    "incremental": {
      "command": "dotnet build src -c Release --no-restore",
      "touchFile": "src/Program.cs",
      "timeout": 30
    }
  },
  "warmupIterations": 2,
  "measuredIterations": 5
}
